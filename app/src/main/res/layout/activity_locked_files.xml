<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbbbbb"
    tools:context="com.locker.welcome.locker.SplashScreen">
    <Button
        android:id="@+id/btn_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Images"
        android:layout_weight="2"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:padding="20dip"
        android:drawableLeft="@drawable/images1"
        android:background="@drawable/round_background"
        />
    <Button
        android:id="@+id/btn_vid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Videos"
        android:layout_weight="2"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_below="@+id/btn_img"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:padding="20dip"
        android:drawableLeft="@drawable/videos1"
        android:background="@drawable/round_background"
        android:layout_marginTop="20dip"
        />
    <Button
        android:id="@+id/btn_aud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audios"
        android:layout_weight="2"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:layout_below="@+id/btn_vid"
        android:padding="20dip"
        android:drawableLeft="@drawable/audios1"
        android:background="@drawable/round_background"
        android:layout_marginTop="20dip"
        />
    <Button
        android:id="@+id/btn_oth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Files"
        android:layout_weight="2"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:layout_below="@+id/btn_aud"
        android:padding="20dip"
        android:drawableLeft="@drawable/otherfiles1"
        android:background="@drawable/round_background"
        android:layout_marginTop="20dip"
        />
</RelativeLayout>
