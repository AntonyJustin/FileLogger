<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    tools:context="com.locker.welcome.locker.SplashScreen">

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:src="@drawable/locker"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dip"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your 5-digit Pincode"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/img"
        />

    <RelativeLayout
        android:id="@+id/pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/pin1"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_margin="5dip"
            android:background="@drawable/roundcorner"
            />
        <ImageView
            android:id="@+id/pin2"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/roundcorner"
            android:layout_margin="5dip"
            android:layout_toRightOf="@+id/pin1"
            />
        <ImageView
            android:id="@+id/pin3"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/roundcorner"
            android:layout_margin="5dip"
            android:layout_toRightOf="@+id/pin2"
            />
        <ImageView
            android:id="@+id/pin4"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/roundcorner"
            android:layout_margin="5dip"
            android:layout_toRightOf="@+id/pin3"
            />
        <ImageView
            android:id="@+id/pin5"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/roundcorner"
            android:layout_margin="5dip"
            android:layout_toRightOf="@+id/pin4"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/num1"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:background="@drawable/n1"
            />
        <Button
            android:id="@+id/num2"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:background="@drawable/n2"
            android:layout_toRightOf="@+id/num1"
            />
        <Button
            android:id="@+id/num3"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:background="@drawable/n3"
            android:layout_toRightOf="@+id/num2"
            />
        <Button
            android:id="@+id/num4"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:background="@drawable/n4"
            android:layout_below="@+id/num1"
            />
        <Button
            android:id="@+id/num5"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:background="@drawable/n5"
            android:layout_below="@+id/num2"
            android:layout_toRightOf="@+id/num4"
            />
        <Button
            android:id="@+id/num6"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:background="@drawable/n6"
            android:layout_below="@+id/num3"
            android:layout_toRightOf="@+id/num5"
            />
        <Button
            android:id="@+id/num7"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:background="@drawable/n7"
            android:layout_below="@+id/num4"
            />
        <Button
            android:id="@+id/num8"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:background="@drawable/n8"
            android:layout_below="@+id/num5"
            android:layout_toRightOf="@+id/num7"
            />
        <Button
            android:id="@+id/num9"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:background="@drawable/n9"
            android:layout_below="@+id/num6"
            android:layout_toRightOf="@+id/num8"
            />
        <Button
            android:id="@+id/num0"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:background="@drawable/n0"
            android:layout_below="@+id/num7"
            />
        <Button
            android:id="@+id/del"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:layout_below="@+id/num8"
            android:layout_toRightOf="@+id/num7"
            android:background="@drawable/delete"
            />
        <Button
            android:id="@+id/enter"
            android:layout_width="90dip"
            android:layout_height="80dip"
            android:layout_below="@+id/num9"
            android:layout_toRightOf="@+id/num8"
            android:background="@drawable/cancel"
            />
    </RelativeLayout>
</RelativeLayout>
