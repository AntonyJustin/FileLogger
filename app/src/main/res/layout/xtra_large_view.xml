<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xtralarge_grid"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_grid"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_gravity="center_horizontal"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingBottom="5dp"
        android:src="@drawable/testing2"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/header_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_below="@+id/img_grid"
        android:textStyle="bold"
        android:textSize="15dip"
        android:text="Filename.ext"
        />

    <TextView
        android:id="@+id/subheader_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_below="@+id/header_textview"
        android:textSize="13dip"
        android:text="100KB"
        />

    <TextView
        android:id="@+id/subheader_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_below="@+id/subheader_textview"
        android:textSize="13dip"
        android:text="13/02/2021 15:58:24"
        />
</RelativeLayout>